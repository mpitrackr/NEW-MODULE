        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="product_expiry.view_move_form_expiry" />
        <field name="arch" type="xml">
            <xpath expr="//page[1]/group/group[1]/field[@name='use_date']" position="attributes">
                <attribute name='string'>Lot Expiry Date</attribute>
            </xpath>
        </field>
    </record>
</odoo>