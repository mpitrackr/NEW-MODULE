    <record id="purchase_form_view_inherited" model="ir.ui.view">
        <field name="name">purchase.form.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[1]/field[@name='partner_ref']" position="attributes">
                <attribute name="string">Oracle PO Number</attribute>
            </xpath>
        </field>
    </record>

</odoo>